<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:demo="urn:import:gwt.material.design.demo.client.ui"
             xmlns:m.demo="urn:import:gwt.material.design.demo.client.ui">
    
    <ui:import field="pt.isep.nsheets.client.place.NameTokens.home"/>   
    <ui:with field="res" type="pt.isep.nsheets.client.resources.AppResources"/>
    <ui:with field="tokens" type="pt.isep.nsheets.client.place.NameTokens"/> 

    <g:HTMLPanel>
          
        <m:MaterialRow addStyleNames="code">
            <m:MaterialTitle title="Form Window" description="The window that shows the Form."/>
            <m:MaterialButton ui:field="btnOpenWindow" text="Open Form" textColor="WHITE" />
            <ma:window.MaterialWindow ui:field="window" width="50%" title="FORM">              
                <m:MaterialPanel padding="32" textAlign="CENTER" height="300px">
                    
                    <!--  CODE OF FORM -->                 
                       
                    <m:MaterialLabel text="Helps me escape from the reality I live in." fontSize="1.2em" />   
                                   
                </m:MaterialPanel>              
            </ma:window.MaterialWindow>       
        </m:MaterialRow>
        
        <m:MaterialRow addStyleNames="code">
            <m:MaterialTitle title="Form Editor Window" description="The window that shows the Form Editor, where you can edit the Form."/>
            <m:MaterialButton ui:field="btnOpenWindowEditor" text="Open Form Editor" textColor="BLACK" />
            <ma:window.MaterialWindow ui:field="windowEditor" width="50%" title="FORM EDITOR">              
                <m:MaterialPanel padding="32" textAlign="CENTER" height="300px">
                    
                    <!--  CODE OF FORM EDITOR-->                 
                       
                    <m:MaterialLabel text="Love to edit." fontSize="1.2em" />   
                                   
                </m:MaterialPanel>              
            </ma:window.MaterialWindow>       
        </m:MaterialRow>
     
        
        
    </g:HTMLPanel>
</ui:UiBinder>
