<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:import field="pt.isep.nsheets.client.place.NameTokens.code"/>
    <ui:with field='res' type='pt.isep.nsheets.client.resources.AppResources' />

    <ui:style>


    </ui:style>



    <g:HTMLPanel>

        <m:MaterialColumn grid="s9">
            <m:MaterialTab ui:field="tab" indicatorColor="GREEN" shadow="1">
                <m:MaterialTabItem waves="YELLOW" grid="s3">
                    <m:MaterialLink text="Regular Visual Basic" href="#tab1" textColor="WHITE"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="YELLOW" grid="s3">
                    <m:MaterialLink text="Visual Basic + parameters" href="#tab2" textColor="WHITE"/>
                </m:MaterialTabItem>
            </m:MaterialTab>
        </m:MaterialColumn>

        <m:MaterialColumn m:id="tab1" grid="s9">
            <m:MaterialTextArea ui:field="CodeArea" label="Visual Basic Code" length="600" resizeRule="AUTO"/>
            <m:MaterialButton ui:field="runButton" text="RUN" textColor="GREEN" type="FLAT" waves="TEAL" />
            <m:MaterialTextArea ui:field="OutputText" label="Output Area" length="400" resizeRule="AUTO"/>
        </m:MaterialColumn>

        <m:MaterialColumn m:id="tab2" grid="s9">
            <m:MaterialLabel/>
            <m:MaterialTextArea label="Something will be here"/>
        </m:MaterialColumn>


    </g:HTMLPanel>


</ui:UiBinder>