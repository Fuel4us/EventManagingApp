<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:import field="pt.isep.nsheets.client.place.NameTokens.code"/>
    <ui:with field='res' type='pt.isep.nsheets.client.resources.AppResources'/>

    <g:HTMLPanel>
        <m:MaterialRow>
            <m:MaterialColumn grid="s6">
                <m:MaterialTextArea ui:field="codeTextArea" label="Input" length="600" resizeRule="AUTO"/>
                <m:MaterialButton ui:field="runButton" text="RUN" waves="LIGHT"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s6">
                <m:MaterialTextArea ui:field="outputTextArea" label="Output" length="300" resizeRule="AUTO" enabled="false"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>