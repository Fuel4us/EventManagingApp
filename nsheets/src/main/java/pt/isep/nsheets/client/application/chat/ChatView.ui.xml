<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
             
             
    <m:MaterialPanel>
    
        <m:MaterialFAB>
            <m:MaterialButton type="FLOATING" iconType="ADD" size="LARGE"/>
            <m:MaterialFABList>
                <m:MaterialButton ui:field="newWorkbookButton" type="FLOATING" waves="LIGHT" iconType="INSERT_DRIVE_FILE" tooltip="New Workbook" tooltipPosition="LEFT"/>
            </m:MaterialFABList>
        </m:MaterialFAB>
 	
        <!-->Message Colection<!-->
        <m:MaterialRow>
            <m:MaterialCollection ui:field="MessageCollection">
                <m:MaterialCollectionItem type="AVATAR">
                    <m:MaterialImage url="https://cdn.pixabay.com/photo/2016/11/18/23/38/child-1837375_960_720.png" type="CIRCLE"/>
                    <m:MaterialLabel text="User1" fontSize="1.2em"/>
                    <m:MaterialLabel text="Hello there, How are you doing?"/>
                    <m:MaterialLabel text="1/2/2016" fontSize="0.6em" float="RIGHT"/>
                </m:MaterialCollectionItem>
                <m:MaterialCollectionItem type="AVATAR">
                    <m:MaterialImage url="https://cdn.pixabay.com/photo/2016/11/18/23/38/child-1837375_960_720.png" type="CIRCLE"/>
                    <m:MaterialLabel text="User2" fontSize="1.2em"/>
                    <m:MaterialLabel text="Hello"/>
                    <m:MaterialLabel text="1/2/2016" fontSize="0.6em" float="RIGHT"/>
                </m:MaterialCollectionItem>
            </m:MaterialCollection>  
            
        </m:MaterialRow>
        
        <g:HTMLPanel ui:field="htmlPanel">
 	    <div align="bottom">
                <m:MaterialRow>
                    <m:MaterialTextBox ui:field="txtMessage" label="Write a message!"/>
                    <m:MaterialButton ui:field="sendButton" width="100%;" text="Send" waves="DEFAULT" backgroundColor="WHITE" textColor="BLACK"/>
                </m:MaterialRow>
            </div>  
        </g:HTMLPanel>
        
    </m:MaterialPanel> 
 	
</ui:UiBinder>