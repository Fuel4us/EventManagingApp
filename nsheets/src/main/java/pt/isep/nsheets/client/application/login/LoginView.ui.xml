<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
	<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">
             
             
 <m:MaterialPanel>
    <m:MaterialRow>
        <m:MaterialColumn grid="s4" offset="s4" >   
            <g:HTMLPanel>
                <m:MaterialTextBox ui:field="txtEmail" type="EMAIL" placeholder="Email" iconType="ACCOUNT_CIRCLE" />
                <m:MaterialTextBox ui:field="txtPassword" type="PASSWORD" placeholder="Password" />
                <m:MaterialButton ui:field="btnLogin" text="Login" waves="LIGHT" size="LARGE"/>
            </g:HTMLPanel>
        </m:MaterialColumn>
    </m:MaterialRow>
 </m:MaterialPanel> 
 	
</ui:UiBinder>