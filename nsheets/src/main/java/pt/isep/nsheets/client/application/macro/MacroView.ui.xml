<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:import field="pt.isep.nsheets.client.place.NameTokens.code"/>
    <ui:with field='res' type='pt.isep.nsheets.client.resources.AppResources' />

    <ui:style>


    </ui:style>



    <g:HTMLPanel>
        <m:MaterialRow>
            <m:MaterialColumn grid="s4" offset="s4">
                <m:MaterialTextArea ui:field="MacroArea" label="Edit Macro" length="600" resizeRule="AUTO"/>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s1" offset="s4">
                <m:MaterialButton ui:field="runButton" text="Run Macro" textColor="RED" type="FLAT" waves="TEAL" />
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s4" offset="s4">
                <m:MaterialTextArea ui:field="Output" label="Output" length="400" resizeRule="AUTO"/>
            </m:MaterialColumn>
        </m:MaterialRow>



    </g:HTMLPanel>


</ui:UiBinder>