<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:import field="pt.isep.nsheets.client.place.NameTokens.code"/>
    <ui:with field='res' type='pt.isep.nsheets.client.resources.AppResources'/>

    <g:HTMLPanel>
        <m:MaterialColumn grid="s9">
            <m:MaterialTextArea ui:field="CodeArea" label="Visual Basic code" length="600" resizeRule="AUTO"/>
            <m:MaterialButton ui:field="runButton" text="RUN" textColor="GREEN" type="FLAT" waves="TEAL"/>
            <m:MaterialTextArea ui:field="OutputText" label="Output Area" length="400" resizeRule="AUTO" enabled="false"/>
        </m:MaterialColumn>
    </g:HTMLPanel>
</ui:UiBinder>