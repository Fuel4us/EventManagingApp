<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:m="urn:import:gwt.material.design.client.ui"
    xmlns:ma="urn:import:gwt.material.design.addins.client">
    
    <m:MaterialPanel>
        <m:MaterialRow>
            <ma:fileuploader.MaterialFileUploader ui:field="uploader" grid="s12 m6 l5" maxFileSize="20" shadow="0">
                <ma:fileuploader.MaterialUploadLabel title="Drag Files to Upload"/>
            </ma:fileuploader.MaterialFileUploader>
            
            <m:MaterialColumn grid="s12 m6 l7">
                <m:MaterialTextBox ui:field="username" label="Username" iconType="ACCOUNT_CIRCLE" iconColor="BLUE" type="EMAIL"/>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m6 l7" >
                <m:MaterialTextBox ui:field="password" label="Password" iconType="VPN_KEY" iconColor="BLUE" type="PASSWORD"/>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m6 l7" >
                <m:MaterialTextBox ui:field="name" label="Name" iconType="PERSON" iconColor="BLUE" />
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m6 l7" >
                <m:MaterialTextBox ui:field="email" label="E-mail" iconType="EMAIL" iconColor="BLUE" />
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m6 l7" textAlign="CENTER">
                <m:MaterialButton ui:field="submitBtn" text="Submit" iconType="SEND"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>
</ui:UiBinder>