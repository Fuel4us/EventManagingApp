<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">
    <g:HTMLPanel ui:field="htmlPanel">
        <ma:emptystate.MaterialEmptyState ui:field="emptyState" height="50vh" iconType="EVENT" iconColor="BLUE" title="No Events"
                                          description="This calendar has no events" textColor="BLUE"
                                          backgroundColor="WHITE"/>
        <m:MaterialFAB>
            <m:MaterialButton type="FLOATING" waves="LIGHT" iconType="ADD"
                              size="LARGE"/>
            <m:MaterialFABList>
                <m:MaterialButton ui:field="createCalendarEventButton" type="FLOATING" waves="LIGHT"
                                  iconType="EVENT" tooltip="New Event" tooltipPosition="LEFT" size="LARGE"/>
            </m:MaterialFABList>
        </m:MaterialFAB>
    </g:HTMLPanel>
</ui:UiBinder>